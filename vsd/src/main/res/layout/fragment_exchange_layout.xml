<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transfer_grey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_8">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/original_store" />

            <TextView
                android:id="@+id/tv_original_store"
                style="@style/transfer_combine_info_tvcontent"
                android:text="x-x-x-1"
                android:visibility="gone" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/stock" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_8">

            <TextView
                android:id="@+id/tv_transfer_original_title"
                style="@style/transfer_combine_info_title"
                android:text="@string/material_code" />

            <TextView
                android:id="@+id/tv_transfer_scan1"
                style="@style/scan_select"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_toRightOf="@+id/tv_transfer_original_title" />

            <EditText
                android:id="@+id/edt_material_code"
                style="@style/transfer_combine_info_edtcontent"
                android:focusable="true"
                android:hint="@string/hint_input_material_code"
                android:textAlignment="textEnd"
                android:inputType="number"
                android:digits="0123456789-"
                android:textColor="@color/grey_hint_text_color" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/stock" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_8">

            <TextView
                style="@style/transfer_combine_info_title"
                android:text="@string/area_code" />

            <EditText
                android:id="@+id/edt_area_code"
                style="@style/transfer_combine_info_edtcontent"
                android:hint="@string/hint_input_area_code"
                android:inputType="number"
                android:digits="0123456789-"
                android:textAlignment="viewEnd" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/stock" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_8">

            <TextView
                style="@style/transfer_combine_info_title"
                android:text="@string/current_reserve" />

            <TextView
                android:id="@+id/tv_current_num"
                style="@style/transfer_combine_info_tvcontent" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/stock" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_8">

            <TextView
                style="@style/transfer_combine_info_title"
                android:text="@string/after_transfer" />

            <TextView
                android:id="@+id/tv_after_num"
                style="@style/transfer_combine_info_tvcontent" />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/stock" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_8">

            <TextView
                style="@style/transfer_combine_info_title"
                android:text="物料数量" />

            <EditText
                android:id="@+id/edt_transfer_num"
                style="@style/transfer_combine_info_edtcontent"
                android:hint="请输入数量"
                android:inputType="number"
                android:textAlignment="viewEnd" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_8">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/target_store" />

            <TextView
                android:id="@+id/tv_to_store"
                style="@style/transfer_combine_info_tvcontent"
                android:text="x-x-x-2"
                android:visibility="gone" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/stock" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_8">

            <TextView
                android:id="@+id/tv_transfer_target_title"
                style="@style/transfer_combine_info_title"
                android:text="@string/material_code" />

            <TextView
                android:id="@+id/tv_transfer_scan2"
                style="@style/scan_select"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_toRightOf="@+id/tv_transfer_target_title" />

            <EditText
                android:id="@+id/edt_material_code2"
                style="@style/transfer_combine_info_edtcontent"
                android:focusable="true"
                android:hint="@string/hint_input_material_code"
                android:textAlignment="textEnd"
                android:inputType="number"
                android:digits="0123456789-"
                android:textColor="@color/grey_hint_text_color" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/stock" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_8">

            <TextView
                style="@style/transfer_combine_info_title"
                android:text="@string/area_code" />

            <EditText
                android:id="@+id/edt_to_area_code"
                style="@style/transfer_combine_info_edtcontent"
                android:hint="@string/hint_input_area_code"
                android:inputType="number"
                android:digits="0123456789-"
                android:textAlignment="viewEnd" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/stock" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_8">

            <TextView
                style="@style/transfer_combine_info_title"
                android:text="@string/current_reserve" />

            <TextView
                android:id="@+id/tv_to_current_num"
                style="@style/transfer_combine_info_tvcontent"
                android:text="" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/stock"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_8"
            android:visibility="gone">

            <TextView
                style="@style/transfer_combine_info_title"
                android:text="@string/after_transfer" />

            <TextView
                android:id="@+id/tv_to_after_num"
                style="@style/transfer_combine_info_tvcontent"
                android:text="" />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/stock" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_sure"
        style="@style/btn_sure"
        android:text="@string/confirm_transfer" />
</LinearLayout>
