<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_F8F8F8">

    <include
        android:id="@+id/includeTitleLayout"
        layout="@layout/activity_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_alignParentTop="true" />
    <TextView
        android:id="@+id/tv_title"
        style="@style/black_middle_style"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/includeTitleLayout"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/dimen_13"
        android:text="这是信息的标题这是信息的标题" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="2017-12-23 00:00:00"
        android:layout_alignTop="@+id/tv_title"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_title"
        android:background="@color/stock" />
    <TextView
        android:id="@+id/tv_second_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_title"
        android:layout_below="@+id/tv_time"
        android:layout_marginTop="13dp"
        android:textColor="@color/grey_title"
        android:text="这是信息的副标题" />

</RelativeLayout>