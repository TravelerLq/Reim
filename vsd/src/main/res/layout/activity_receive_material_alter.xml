<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/includeTitleLayout"
        layout="@layout/activity_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_alignParentTop="true" />


    <RelativeLayout style="@style/relative_check_style">

        <TextView
            android:id="@+id/tv_apply_start_time"
            style="@style/check_plan_info"
            android:text="@string/sap_title" />


        <TextView
            android:id="@+id/tv_sap_no"
            style="@style/transfer_combine_info_tvcontent" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/stock" />

    <RelativeLayout style="@style/relative_check_style">

        <TextView

            style="@style/check_plan_info"
            android:text="计划数量" />


        <TextView
            android:id="@+id/tv_plan_amount"
            style="@style/transfer_combine_info_tvcontent" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/stock" />

    <RelativeLayout style="@style/relative_check_style">

        <TextView
            style="@style/check_plan_info"
            android:text="实际送货数量" />

        <EditText
            android:id="@+id/edt_send_amount"
            android:inputType="number"
            style="@style/transfer_combine_info_edtcontent"
            android:hint="@string/hint_input_amount" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/stock" />


    <RelativeLayout style="@style/relative_check_style"
        android:id="@+id/rl_execute_status">

        <TextView
            style="@style/check_plan_info"
            android:text="@string/remarks" />

        <TextView
            android:id="@+id/tv_remark"
            style="@style/transfer_combine_info_tvcontent"
            android:drawablePadding="@dimen/dimen_10"
            android:drawableRight="@drawable/ic_more"
            android:text="短缺" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/stock" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_12" />

    <Button
        android:id="@+id/btn_sure"
        style="@style/btn_sure"
        android:text="@string/sure" />
</LinearLayout>
