<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_10"
    android:layout_marginRight="@dimen/dimen_10"
    android:background="@drawable/bg_red__rounded_rectangle"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dimen_5"
    android:paddingLeft="@dimen/dimen_10"
    android:paddingRight="@dimen/dimen_10"
    android:paddingTop="@dimen/dimen_5"
    android:layout_marginTop="@dimen/dimen_20">

    <LinearLayout
        android:id="@+id/rl_expense_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="536"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60">

            <ImageView
                android:id="@+id/iv_rmb"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"

                android:src="@drawable/ic_wait_rmb" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_toRightOf="@+id/iv_rmb"
                android:text="100" />

            <TextView
                android:id="@+id/iv_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:background="@color/red_rec_" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:layout_marginTop="@dimen/dimen_5">

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:src="@drawable/ic_person_header" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_toRightOf="@+id/iv_user"
                android:text="100" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:background="@color/red_rec_" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:layout_marginTop="@dimen/dimen_5">

            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:src="@drawable/ic_wait_time" />

            <TextView
                android:id="@+id/tv_expense_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_toRightOf="@+id/iv_time"
                android:text="100" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:background="@color/red_rec_" />


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="113"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_expense_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_expense_type"
            android:gravity="center"
            android:text="2" />

    </LinearLayout>


</LinearLayout>
