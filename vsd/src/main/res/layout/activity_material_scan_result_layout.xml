<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_F8F8F8">

       <include
        android:id="@+id/includeTitleLayout"
        layout="@layout/activity_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_219"
        android:layout_below="@id/includeTitleLayout"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:id="@+id/successImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/store_material_success" />

        <TextView
            android:id="@+id/storeTitleTxt"
            style="@style/big_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/successImg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_17"
            android:text="@string/store_material_scan_done"
            android:textColor="@color/black_333333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/goScanTxt"
            style="@style/big_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/storeTitleTxt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_7"
            android:text="@string/go_scan_or_input" />

    </RelativeLayout>

    <Button
        android:id="@+id/startScanBtn"
        style="@style/white_big_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topLayout"
        android:layout_alignLeft="@id/topLayout"
        android:layout_alignRight="@id/topLayout"
        android:layout_marginTop="@dimen/dimen_28"
        android:background="@drawable/select_btn_go_scan_xml"
        android:text="@string/go_scan_or_copy" />

    <Button
        android:id="@+id/startStoreMaterailBtn"
        style="@style/white_big_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/startScanBtn"
        android:layout_marginTop="@dimen/dimen_25"
        android:background="@drawable/select_btn_start_store_xml"
        android:layout_alignLeft="@id/startScanBtn"
        android:layout_alignRight="@id/startScanBtn"
        android:text="@string/start_store_material" />

</RelativeLayout>